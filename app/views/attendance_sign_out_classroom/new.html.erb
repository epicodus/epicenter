<h2 class="text-center">Attendance sign out</h2>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag sign_out_classroom_path do %>
      <%= hidden_field_tag :signing_out, value: true %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag 'email', nil, autofocus: true, required: true, value: @email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag 'password', nil, autocomplete: "off", required: true, class: "form-control" %>
      </div>
      <%= submit_tag 'Attendance sign out', class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>
