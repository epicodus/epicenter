<div class="row">
  <div class="span12">
    <header>
      <h1><%= current_cohort.description %> Student Sign-in </h1>
    </header>
  </div>
</div>

<div class="row">
  <%= div_for @students, class: 'well span3' do |student| %>
    <% if student.signed_in_today? %>
      <p class="text-success pull-right"><span class="check">&#x2713;</span> Signed in</p>
        <% if student.signed_out_today? %>
          <p class="text-success pull-right"><span class="check">&#x2713;</span> Signed out</p>
        <% else %>
          <%= form_for student.attendance_records.today.first do |f| %>
            <%= f.hidden_field :student_id, value: student.id %>
            <%= f.hidden_field :signing_out, value: true %>
            <%= f.submit "I'm leaving", class: 'btn btn-primary pull-right' %>
          <% end %>
        <% end %>
    <% else %>
      <%= form_for AttendanceRecord.new do |f| %>
        <%= f.hidden_field :student_id, value: student.id %>
        <%= f.submit "I'm here", class: 'btn btn-primary pull-right' %>
      <% end %>
    <% end %>
    <%= gravatar_tag student.email, :size => 85, :html => { :class => 'img-rounded' }, :default => "http://placehold.it/85&text=%20" %>
    <h2><%= student.name %></h2>
  <% end %>
</div>
