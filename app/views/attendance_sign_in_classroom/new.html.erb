<h2 id="attendance-signin-label" class="text-center">
  Classroom Attendance Sign In
  <br><small>(Signing in again will not impact sign in time.)</small>
</h2>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag sign_in_classroom_path do %>
      <%= hidden_field_tag :signing_in, value: true %>
      <div class="well">
        <div class="form-group">
          <%= label_tag :email1, "Email (first student)" %>
          <%= text_field_tag 'email1', nil, autofocus: true, required: true, value: @email1, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password1, "Password (first student)" %>
          <%= password_field_tag 'password1', nil, autocomplete: "off", required: true, class: "form-control" %>
        </div>
      </div>
      <div class="well">
        <div class="form-group">
          <%= label_tag :email2, "Email (second student)" %>
          <%= text_field_tag 'email2', nil, value: @email2, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= label_tag :password2, "Password (second student)" %>
          <%= password_field_tag 'password2', nil, autocomplete: "off", class: "form-control" %>
        </div>
      </div>
      <div class="well">
        <div class="form-group">
          <%= label_tag :station %>
          <%= text_field_tag :station, nil, value: @station, class: "form-control" %>
        </div>
      </div>
      <%= submit_tag 'Attendance sign in', class: "btn btn-epicodus btn-block" %>
    <% end %>
    <br><p class="text-center"><%= link_to 'Forgot your password?', new_user_password_path %></p>
  </div>
</div>
