<%= form_for @attendance_record_amendment do |f| %>
  <%= render 'layouts/errors', object: @attendance_record_amendment %>
  <div class="form-group">
    <%= f.label :student_id %>
    <%= f.collection_select :student_id, @course.students_all_locations.order(:name), :id, :name, {}, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date, class: 'custom-datepicker form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, options_for_select(["On time", "Tardy", "Left early", "Tardy and Left early", "Absent"], @attendance_record_amendment.status), {}, { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= f.label :pair_ids, 'Pairs' %>
    <%= select_tag "attendance_record_amendment[pair_ids][]", options_for_select(@course.students_all_locations.where.not(id: @attendance_record_amendment.student_id).order(:name).map {|s| [s.name, s.id]}.prepend(['-Solo-', '']), selected: @attendance_record_amendment.pair_ids.try(:first)), { class: 'form-control', id: 'pair-select-1' } %>
  </div>
  <div class="form-group">
    <%= select_tag "attendance_record_amendment[pair_ids][]", options_for_select(@course.students_all_locations.where.not(id: @attendance_record_amendment.student_id).order(:name).map {|s| [s.name, s.id]}.prepend(['-', '']), selected: @attendance_record_amendment.pair_ids.try(:second)), { class: 'form-control', id: 'pair-select-2' } %>
  </div>
  <div class="form-group hide">
    <%= select_tag "attendance_record_amendment[pair_ids][]", options_for_select(@course.students_all_locations.where.not(id: @attendance_record_amendment.student_id).order(:name).map {|s| [s.name, s.id]}.prepend(['-', '']), selected: @attendance_record_amendment.pair_ids.try(:third)), { class: 'form-control', id: 'pair-select-3' } %>
  </div>
  <div class="form-group hide">
    <%= select_tag "attendance_record_amendment[pair_ids][]", options_for_select(@course.students_all_locations.where.not(id: @attendance_record_amendment.student_id).order(:name).map {|s| [s.name, s.id]}.prepend(['-', '']), selected: @attendance_record_amendment.pair_ids.try(:fourth)), { class: 'form-control', id: 'pair-select-4' } %>
  </div>
  <%= f.submit "Submit", class: 'btn btn-info' %>
<% end %>
