<h1><%= @company.name %></h1>
  <table class="table table-rating">
    <tr>
      <th>Company info:</th>
      <td>
        <%= link_to @company.website, @company.website %><br>
        <%= @company.address %><br><br>
        <%= @company.description %>
      </td>
    </tr>
    <tr>
      <th>Contact:</th>
      <td>
        <%= "#{@company.contact_name}, #{@company.contact_title}" %><br>
        <%= @company.contact_phone %><br>
        <%= @company.contact_email %>
      </td>
  </table>
