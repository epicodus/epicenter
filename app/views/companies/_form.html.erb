<%= form_for @company do |f| %>
  <%= render 'layouts/errors', object: @company %>

  <div class='form-group'>
    <%= f.label :name, "Company Name" %>
    <%= f.text_field :name %>
  </div>

  <div class='form-group'>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 5, style: "width: 50em" %>
  </div>

  <div class='form-group'>
    <%= f.label :website %>
    <%= f.text_field :website %>
  </div>

  <div class='form-group'>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <h5>Contact</h5>

  <div class='form-group'>
    <%= f.label :contact_name, "Name" %>
    <%= f.text_field :contact_name %>
  </div>

  <div class='form-group'>
    <%= f.label :contact_title, "Title" %>
    <%= f.text_field :contact_title %>
  </div>

  <div class='form-group'>
    <%= f.label :contact_phone, "Phone Number" %>
    <%= f.text_field :contact_phone %>
  </div>

  <div class='form-group'>
    <%= f.label :contact_email, "Email" %>
    <%= f.email_field :contact_email %>
  </div>

  <div class="submit">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
