<h1 class="text-center">Sign In</h1>
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <%= form_tag sign_in_path do %>
    <fieldset>
      <legend class="text-info">Student 1</legend>
      <div class="form-group">
        <%= text_field_tag 'email_1', nil, placeholder: "Email", class: "form-control input-lg", required: true %>
      </div>
      <div class="form-group">
        <%= password_field_tag 'password_1', nil, placeholder: "Password", class: "form-control input-lg", required: true %>
      </div>
    </fieldset>
    <fieldset class="pair-sign-in">
      <legend class="text-info">Student 2
      </legend>
      <div class="form-group">
        <%= text_field_tag 'email_2', nil, placeholder: "Email", class: "form-control input-lg"%>
      </div>
      <div class="form-group">
        <%= password_field_tag 'password_2', nil, placeholder: "Password", class: "form-control input-lg" %>
      </div>
    </fieldset>
      <div class="btn-group btn-group-justified solo-group">
        <div class="btn-group btn-group-lg">
          <%= submit_tag 'Solo', class: 'btn btn-primary' %>
        </div>
        <div class="btn-group btn-group-lg">
          <a class= "btn btn-success pairing" name="button">Pair Sign In?</a>
        </div>
      </div>
      <%= submit_tag 'Pair Sign In', class: 'btn btn-success btn-block btn-lg pair-sign-in' %>
      <a class="solo text-info">Solo?</a>
    <% end %>
  </div>
</div>
